{
  "name": "sfotipy",
  "version": "0.1.0",
  "description": "A Spotify Clone (?)",
  "main": "server.js",
  "scripts": {
    "stylus": "stylus ./src/client/stylus/app.styl -u nib -o ./public",
    "public": "mkdir -p public views",
    "copy-files": "cp -r src/client/assets public && cp -r src/client/*.html views/",
    "build-js": "NODE_PATH=. browserify -t  hbsfy -t [ babelify --presets [ es2015 ] ] ./src/client/backbone/app.js > ./public/app.js",
    "build": "npm run public && npm run stylus && npm run copy-files && npm run build-js",
    "dist": "babel src/server/index.js src/server/**/*.js --out-dir dist --presets es2015",
    "server": "NODE_PATH=./dist node dist/src/server",
    "start": "npm run dist && npm run server"
  },
  "author": "Julian Duque",
  "license": "MIT",
  "dependencies": {
    "backbone": "^1.3.2",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.15.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.0.2",
    "consolidate": "^0.14.0",
    "cookie-parser": "^1.4.1",
    "express": "^4.13.4",
    "express-session": "^1.13.0",
    "handlebars": "^4.0.5",
    "jquery": "^1.12.2",
    "morgan": "^1.7.0",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "pg": "^4.5.5",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.23.1",
    "spotify-finder": "^1.0.0",
    "stylus": "^0.54.5",
    "swig": "^1.4.2",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "hbsfy": "^2.5.1",
    "nib": "^1.1.0"
  }
}
