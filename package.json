{
  "name": "sfotipy",
  "version": "0.1.0",
  "description": "A Spotify Clone (?)",
  "main": "server.js",
  "scripts": {
    "public": "mkdir -p public",
    "lint": "standard",
    "copy-files": "NODE_PATH=. cp -r ./src/assets ./public  && cp ./src/index.html ./public && npm run design && http-server .",
    "stylus": "NODE_PATH=. stylus ./src/stylus/app.styl -u nib  -w -o  ./public ",
    "build-js": "NODE_PATH=. browserify -t [ hbsfy -e html,htm] -t babelify ./src/backbone/app.js > ./public/app.js",
    "build": "npm run public && npm run copy-files && npm run build-js",
    "server": "http-server ./public",
    "design": "NODE_PATH=: cp ./src/hits.html ./public"
  },
  "author": "Julian Duque",
  "license": "MIT",
  "dependencies": {
    "backbone": "^1.3.2",
    "handlebars": "^4.0.5",
    "jquery": "^1.12.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "hbsfy": "^2.5.1",
    "standard": "^6.0.8"
  }
}
