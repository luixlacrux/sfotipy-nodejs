<div class="button">
  <button class="icon-play"></button>
</div>
<figure class="image">
  <img src="{{cover}}" width="128" height="128" alt="{{name}} - {{author.name}}">
</figure>
<p class="name">
  {{name}}
</p>
<p class="author">
  <span class="slug">
    {{# each artists }}
      {{# if @last }}
        <span data-href="/artist/{{ this.name }}/{{ this.id }}">{{ this.name }}</span>
      {{ else }}
        <span data-href="/artist/{{ this.name }}/{{ this.id }}">{{ this.name }},</span>
      {{/ if}}
    {{/ each }}
  </span>
</p>
