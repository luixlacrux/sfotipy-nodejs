<div class="ViewAlbum">
  <div class="info-album">
    <div class="photo-album" style="background-image: url('{{ cover }}')"></div>
    <a href="#" class="btn btn-white btn-more-mobile">...</a>
    <p class="type">{{ type }}</p>
    <h2 class="name">{{ name }}</h2>
    <p class="description">De <strong>{{ artist.name }}</strong> / {{ date }} / {{ total }} canciones, 42 min</p>
    <div class="options">
      <a href="#" class="btn btn-red btn-save">Guardar</a>
      <a href="#" class="btn btn-white btn-play">Reproducir</a>
      <a href="#" class="btn btn-white btn-more">...</a>
    </div>
  </div>
  <ul class="songs">
    <li class="item item-fixed">
      <span class="number">#</span>
      <span class="click">Canci√≥n</span>
      <span class="duration">x</span>
    </li>
  </ul>
  <div class="copyrights">
    <p>{{ copyrights.c.text }}</p>
    <p>{{ copyrights.p.text }}</p>
  </div>
</div>
