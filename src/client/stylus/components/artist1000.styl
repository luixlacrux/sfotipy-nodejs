article.artist
  background rgba(129, 129, 129, 0.2)
  height 280px
  width 200px

  .author
    cursor pointer
    position absolute
    bottom .5em
    left 5px
    color #5a5a5a
    font-size .8em
  .name
    position absolute
    width 100%

  .button
    width 200px
    height 200px
    .icon-play
      margin-top 70px
  .image
    height 200px
    position relative
    background-color black

    .image-background
      background-position center
      background-repeat no-repeat
      background-size 280px
      position absolute
      height 100%
      width 100%
      top 0
    .opacity-background
      background-color rgba(0, 0, 0, 0.65)
      width 100%
      height 100%
      position absolute
      top 0

    .img
      position absolute
      top 10px
      left 10px
      z-index 1
      width 180px
      height 180px
      border-radius 50%
      background-position center
      background-size cover
      background-repeat no-repeat
