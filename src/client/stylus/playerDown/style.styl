#player-min
  z-index 3
  background #f0f0f0
  height 70px
  position fixed
  width 100%
  text-align center
  bottom 0
  box-shadow 0 5px 20px black
  .progress-min
    background gris_claro
    cursor pointer
    height 2px
    width 100%
    .state
      background rojo
      width 0
      height 2px
  #currentSong
    cursor pointer
  .image-min
    width 68px
    display inline-block
    height 68px
    position absolute
    left 0
    background #000
    overflow hidden
    img
      width 100%
      height 100%
      transition all .5s ease
      &:hover
        opacity .8
        transform scale(1.3)
  .info-min
    position absolute
    margin-top 15px
    text-align center
    width 100%
    span.name
      font-size 1.1em
      display block
      margin-left 70px
      margin-right 70px
      transition all .4s ease
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      &:hover
        color rojo
    span.artist
      display block
      font-size 13px
      color gray
  .btns-min
    display none
    position absolute
    right 0
    left 284px
    .action
      margin-top .25em
    .icon-vol
    .icon-mute
      float right
    .icon-random
      float right
    .range-vol
      padding .85em
      padding-left 0
      float right
