section.Library

  max-width 1000px
  margin 0 auto
  .song
    background rgba(129, 129, 129, 0.2)
    width 200px
    height 280px

    .name
    .author
      position absolute
      color gris_oscuro

    .button
      width 200px
      height 200px
      .icon-play
        margin-top 70px
