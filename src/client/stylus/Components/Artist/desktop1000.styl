article.artist
  background rgba(129, 129, 129, 0.2)
  height 280px
  width 200px


  .name
    position absolute
    color gris_oscuro

  .button
    width 200px
    height 200px
    .icon-play
      margin-top 70px
  .image
    height 200px
    position relative
    background-position center
    background-size 280px

    .opacity-background
      background-color rgba(0, 0, 0, 0.65)
      width 100%
      height 100%
      position absolute
      top 0

    .img
      position absolute
      top 10px
      left 10px
      z-index 1
      width 180px
      height 180px
      border-radius 50%
      background-position center
      background-size cover
      background-repeat no-repeat
