@import "nib"
@import "normalize.styl"
@import "fonts.styl"

vendor-prefixes = webkit o ms moz official
// animacion(parametro)
//  -webkit-animation parametro
//  -moz-animation parametro
//  -o-animation parametro
//  -ms-animation parametro
//  animation parametro

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0
facebook = #3B5998
twitter = #5EA9DD

@import "spinner.styl"

a
    text-decoration none
body
    font-family 'Varela Round', sans-serif
    font-size 16px
figure
    margin 0
img
    vertical-align top
ul
    margin 0
    padding 0

//utilitis
wrap()
    max-width 980px
fixed()
    position fixed
btn-submit()
    border none
    margin 0 auto
    display block
    background rojo
    height 2em
    line-height 2em
    border-radius .3em
    text-align center
    width 90%
    color #fefefe
    font-size 1.4em

search-mobile()
    padding 2em 0
    margin 0 auto
    width 85%


search-mobile-input()
    outline none
    border none
    border-radius .5em
    padding .5em
    width 70%

icon-search-big()
    color white
    font-size 2em
    position: absolute
    right 0

text-wrapper()
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
.input-form
    background none
    border gris_claro 1px solid
    border none
    bottom 0
    left 1.8em
    outline none
    position: absolute
    text-indent .3em
    top 0
    width 90%

//buttons
.button-menu
    color gris_oscuro
    left 1.5em
    margin-top -10px
    position absolute
    top 50%
//oocss classes
.container
    padding 1.4rem
    text-align center
.action
    outline none
    color white
    border none
    padding .2em .5em
    font-size 1.2em
    margin-right .5em
    transition all .3s
    &:last-child
        margin-right 0
    &.gray
        margin-bottom .3em
        color gris_claro
        border-radius .2em
        &.icon-vol
            input
                outline none
        &:hover
            color gris_oscuro
        &:active
            color gris_oscuro
            box-shadow inset 0 0 .4em rgba(gris_oscuro, .75)
    &.red
        color red
.isActive
    color gris_oscuro
    box-shadow inset 0 0 .4em rgba(gris_oscuro, .75)
    border-radius .2em

.description
    .name
        padding 1em 0
        margin 0
        font-size 1.1em
        background rgba(black,.3)
        color white
        width 100%
        position absolute
        top 0
.music
    display none
.actions
    position absolute
    bottom 0
    left 0
    right 0
    background rgba(black,.3)

.border-left
    border-left 1px solid gris_claro
.name
    color gris_oscuro
.menu
    wrap()
    fixed()
    border none
    display block
    z-index 1
    width 80%
    left -80%
    height 100%
    background rgba(#000, 0.9)
    .search-mobile
        search-mobile()
        input
            search-mobile-input()
        .icon-search
            icon-search-big()
    .list
        overflow-y auto
        max-height 70vh
    .item
        list-style none
        width 85%
        margin 0 auto
        a
            display block
            padding 1em 0
            color gris_mas_claro
            border-bottom 1px gris_mas_claro solid
            transition .4s color
            &:hover
            &:active
                color rojo
.relative
    position relative
//.author
//  color gris_claro
.center-block
    margin 0 auto
.center-text
    text-align center
.right-text
    text-align right
.relative
    position relative
.padding
    padding 1em
.padding-tb
    padding 1em 0
.left
    float left
.right
    float right

.item-playing
		border-left 3px solid rojo
		text-shadow 1px -1px rgba(189, 37, 91, 0.61)

.round
    border-radius 50%
    overflow hidden
.progress
    margin 1em 0
    position relative
    .min
    .max
        font-size .8em
        position absolute
        top -5px
    .min
        left 0
    .max
        right 0
    .total
        cursor pointer
        background gris_claro
        border-radius 5px
        height 5px
        margin 0 auto
        width 75%
    .circle
        background gris_oscuro
        border-radius 50%
        height 10px
        position absolute
        right -5px
        top -2px
        width 10px

        transition all .2s
        //animation 1s circle infinite
    .state
        animation 10s state infinite linear
        background rojo
        border-radius 5px
        height 5px
        position relative
        width 0%
        max-width 100%
    &:hover
        .circle
            box-shadow inset 0 0 5px #8a9597
            height 15px
            width 15px
            top -5px
            right -8px

/*@keyframes state
    0%
        width 0
    100%
        width 100%
*/
@keyframes circle
    0%
        transform scale(1)
    100%
        transform scale(2)
        opacity 0
.header
    height 3.5em

    // a
    //  display none
    .title
        font-size 1.1em
        line-height 3.5em
        margin 0
        text-align center

.song
    display inline-block
    font-size 1rem
    margin-bottom 1em
    margin-right 1em
    text-align left
    vertical-align top
    width 8rem
    cursor pointer
    &:nth-child(even)
        margin-right 0
    p
        text-wrapper()
        margin .5em 0

.playing
    &.small
        width 20em
        margin 0 auto

.input
    overflow hidden
    border 1px solid gris_claro
    height 2.5em
    border-radius 5px
    padding 0 1em 0 2em
.search-icon
    position absolute
    left .5em
    top .8em
    color gris_claro
.close-icon
    position absolute
    top .5em
    color gris_claro
    right .5em
    font-size 1.2em
.playlist
    border-color transparent
    padding 0 2em
    width 22em
    display initial
    .list
        list-style none
    .item
        cursor pointer
        padding 1em 0
        span
            display inline-block
            max-width 60%
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
    .action
        font-size .8em
.isotipo
    width 122px
.logo
    background white
    padding 1.3em 0
    display none
    clearfix()
    .center-block
        wrap()
.avatar
    width 38px
    height 38px
.username
    color gris_claro
    position relative
    top 9px
    margin-left .5em
    &:after
        border-left 7px solid transparent
        border-right 7px solid transparent
        border-top 9px solid gris_claro
        content ""
            display inline-block
            margin-left .4em


//imports components
@import 'home/style.styl'
@import 'header/style.styl'
@import 'share/style.styl'
@import 'search/style.styl'

@media screen and (min-width:480px)

    .cover-hit
        img
            margin-bottom 0
            margin-top -50px
    .song
        &:nth-child(even)
            margin-right 1em
    .image
        img
            width 100%
            height auto
    .playing
        &.medium
            width auto

/* MEDIA DESKTOP */

@media screen and (min-width:1000px)
    body
        background gris_mas_claro

    @import 'header/desktop.styl'
    @import 'home/desktop.styl'
    @import 'search/desktop.styl'

    .playing
        padding-top 1.3em
        text-align center
        &.large
            margin 0 auto
            wrap()
            overflow hidden
        .playlist
            border-radius .2em
            box-shadow inset -10px 1px 15px gris_claro
            max-height 39em
            overflow-y auto

    .music
        width 32.5em
        float left

    .playlist
        display inline-block



