.Header
  border-bottom 1px solid gris_claro
  height 3.5em
  margin 0 auto
  position relative

  &-logo
    border-bottom 1px solid gris_claro
    background white
    display none
    padding-bottom 2.3em
    .container
      margin 0 auto
      center-block()
      wrap()

      .image
        float left
        width 122px

      .user
        cursor pointer
        margin-left .3em
        float right
        position relative

      .avatar
        border-radius 50%
        float left
        height 38px
        overflow hidden
        width 38px

      .username
        color gris_claro
        float left
        margin-left .5em
        position relative
        top 9px
        &:after
            content ""
            border-left 7px solid transparent
            border-right 7px solid transparent
            border-top 9px solid gris_claro
            display inline-block
            margin-left .4em

      .dropdown
        display none
        position absolute
        top 4.5em
        right 0
        background #fefefe
        border-radius .3em
        box-shadow 0px 5px 10px rgba(0, 0, 0, 0.5)
        width 200px
        &-menu
          position relative
          padding .3em
          margin 0
          list-style none
          &:before
            content ""
            border-left 10px solid transparent
            border-right 10px solid transparent
            border-bottom 9px solid #fefefe
            position absolute
            top -9px
            right 9px
          .link
            text-align left
            padding .3em
            text-decoration none
            color gris_oscuro
            display block
            transition .4s
            &:hover
              color rosa
          .logout
            font-size .9em
            padding-top .4em
            border-top 1px solid #ccc

      .search
        float right
        .form
          position relative
          .icon-search
            position absolute
            left .5em
            top .8em
            color gris_claro
            cursor pointer
          .input
            input()
            outline none
            &:focus
              border-color rojo
          .close-icon
            cursor pointer
            position absolute
            top .4em
            color gris_claro
            right .5em
            font-size 1.2em
  &-btnMenu
    color gris_oscuro
    left 1.5em
    margin-top -10px
    position absolute
    top 50%

  &-menu
    wrap()
    fixed()
    border none
    display block
    z-index 1
    width 80%
    left -80%
    height 100%
    background rgba(#000, 0.9)
    .search-mobile
      search-mobile()

      .icon-search
          cursor pointer
          icon-search-big()
      input
        search-mobile-input()
    .list
      overflow-y auto
      max-height 70vh
      border-bottom none
    .item
      list-style none
      width 85%
      margin 0 auto
      a
        display block
        padding 1em 0
        color gris_mas_claro
        border-bottom 1px gris_mas_claro solid
        transition .4s color
        &:hover
        &:active
          color rojo
  &-title
    font-size 1.1em
    line-height 3.5em
    margin 0
    text-align center
