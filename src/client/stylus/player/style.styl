#player
  padding-bottom 70px
  .playing
    &.small
      width auto
      margin 0 auto
    .image
      img
        width 100%
        height auto
    // Reproductor de audio
    .music
      // Controles del reproductor
      .play
        .range-vol
          padding .35em
      .progress
        margin 1em 0
        position relative
        .position-mouse
          background rgba(136, 136, 136, 0.57)
          border-radius 5px
          display none
          height 20px
          margin-left 35px
          padding .1em .3em 0 .3em
          position absolute
          top -40px
          .flechita
            border-top .5em solid rgba(136,136,136,0.57)
            border-left .5em solid rgba(255, 0, 0, 0)
            border-bottom .5em solid rgba(0, 0, 255, 0)
            border-right .5em solid rgba(255, 255, 0, 0)
            width 0
            margin 0 auto
        .min
        .max
          font-size .8em
          position absolute
          top -5px
        .min
          left 0
        .max
          right 0
        .total
          cursor pointer
          background gris_claro
          border-radius 5px
          height 5px
          margin 0 auto
          width 75%
          .state
            animation 10s state infinite linear
            background rojo
            border-radius 5px
            height 5px
            position relative
            width 0%
            max-width 100%
            .circle
              background gris_oscuro
              border-radius 50%
              height 10px
              position absolute
              right -5px
              top -2px
              width 10px
              transition all .2s
          &:hover
            .circle
              box-shadow inset 0 0 5px #8a9597
              height 15px
              width 15px
              top -5px
              right -8px

    // Lista de Reproduccion
    .playlist
      padding 0 .5em
      .action
        font-size .8em
      .list
        list-style none
        overflow hidden
        border-bottom none
        .item
          cursor pointer
          padding 1em 0
          border-left 3px solid transparent
          div.click
            display inline-block
            height 18px
            margin 0
            margin-left 2.3em
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            width calc(100% - 47%)
        .item-playing
          border-left 3px solid rojo
          text-shadow 1px -1px rgba(189, 37, 91, 0.61)
          position relative
          &:before
            content ""
            margin 0 .5em
            display inline-block
            background-image url("/assets/img/play.svg")
            background-position center
            background-repeat no-repeat
            background-size cover
            width 20px
            height 20px
            position absolute
            left 0

// Transformacion del circulo
@keyframes circle
    0%
        transform scale(1)
    100%
        transform scale(2)
        opacity 0
