@import "nib"
@import "normalize.styl"
@import "fonts.styl"

vendor-prefixes = webkit o ms moz official
// animacion(parametro)
//  -webkit-animation parametro
//  -moz-animation parametro
//  -o-animation parametro
//  -ms-animation parametro
//  animation parametro

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

a
    text-decoration none
body
    font-family 'Varela Round', sans-serif
    font-size 16px
figure
    margin 0
img
    vertical-align top
ul
    margin 0
    padding 0
//buttons
.button-menu
    color gris_oscuro
    left .5em
    margin-top -10px
    position absolute
    top 50%
//oocss classes
.container
    padding 1.4rem
    font-size 0
    text-align center
.action
    outline none
    color white
    border none
    padding .2em .5em
    font-size 1.2em
    margin-right .5em
    transition all .3s
    &:last-child
        margin-right 0
    &.gray
        margin-bottom .3em
        color gris_claro
        border-radius .2em
        &.icon-vol
            input
                outline none 
        &:hover
            color gris_oscuro
        &:active
            color gris_oscuro
            box-shadow inset 0 0 .4em rgba(gris_oscuro, .75)
    &.red
        color red
.isActive
    color gris_oscuro
    box-shadow inset 0 0 .4em rgba(gris_oscuro, .75)
    border-radius .2em

.description
    .name
        padding 1em 0
        margin 0
        font-size 1.1em
        background rgba(black,.3)
        color white
        width 100%
        position absolute
        top 0
.music
    display none
.actions
    position absolute
    bottom 0
    left 0
    right 0
    background rgba(black,.3)
.border-bottom
    border-bottom 1px solid gris_claro
.border-left
    border-left 1px solid gris_claro
.name
    color gris_oscuro
.menu
    display none
.relative
    position relative
//.author
//  color gris_claro
.center-block
    margin 0 auto
.center-text
    text-align center
.right-text
    text-align right
.relative
    position relative
.padding
    padding 1em
.padding-tb
    padding 1em 0
.left
    float left
.right
    float right
.wrap
    width 1000px
.round
    border-radius 50%
    overflow hidden
.progress
    margin 1em 0
    position relative
    .min
    .max
        font-size .8em
        position absolute
        top -5px
    .min
        left 0
    .max
        right 0
    .total
        background gris_claro
        border-radius 5px
        height 5px
        margin 0 auto
        width 75%
    .circle
        background gris_oscuro
        border-radius 50%
        height 10px
        position absolute
        right -5px
        top -2px
        width 10px
        
        transition all .2s
        //animation 1s circle infinite
    .state
        animation 10s state infinite linear
        background rojo
        border-radius 5px
        height 5px
        position relative
        width 0%
        max-width 100%
    &:hover
        .circle
            box-shadow inset 0 0 5px #8a9597
            height 15px
            width 15px
            top -5px
            right -8px
        
/*@keyframes state
    0%
        width 0
    100%
        width 100%
*/
@keyframes circle
    0%
        transform scale(1)
    100%
        transform scale(2)
        opacity 0
.header
    height 3.5em
    
    // a
    //  display none
    .title
        font-size 1.1em
        line-height 3.5em
        margin 0
        text-align center

.song
    display inline-block
    font-size 1rem
    margin-bottom 1em
    margin-right 1em
    text-align left
    vertical-align top
    width 8rem
    cursor pointer
    &:nth-child(even)
        margin-right 0
    p
        margin .5em 0

.playing
    &.small
        width 20em
        margin 0 auto

.input
    overflow hidden
    border 1px solid gris_claro
    height 2.5em
    border-radius 5px
    padding 0 1em 0 2em
.search-icon
    position absolute
    left .5em
    top .8em
    color gris_claro
.close-icon
    position absolute
    top .5em
    color gris_claro
    right .5em
    font-size 1.2em
.playlist
    border-color none
    //border-left 1px solid gris_claro
    padding 0 2em
    width 22em
    display inline
    .list
        list-style none
    .item
        cursor pointer
        padding 1em 0
        span 
            white-space nowrap
            text-overflow ellipsis
    .action
        font-size .8em
.isotipo
    width 122px
.logo
    background white
    padding 1.3em 0
    display none
    clearfix()
.avatar
    width 38px
    height 38px
.username
    color gris_claro
    position relative
    top 9px
    margin-left .5em
    &:after
        border-left 7px solid transparent
        border-right 7px solid transparent
        border-top 9px solid gris_claro
        content ""
            display inline-block
            margin-left .4em

/*======= Home ========*/

.input-form
    background none
    border gris_claro 1px solid
    border none
    bottom 0
    left 1.8em
    outline none
    position: absolute
    text-indent .3em 
    top 0
    width 90%
.btn-submit
    margin 0 auto
    display block
    background rojo
    height 2em
    line-height 2em
    border-radius .3em
    text-align center
    width 90%
    color #fefefe
    font-size 1.4em

.home
    background white
    position relative
    .logo
        background-image url('assets/img/cover.jpg')
        background-size auto
        background-position center
        background-repeat no-repeat
        color #fefefe
        display block
        text-align center
        padding-top 100px
        height 400px
        width 100%
        figcaption
            font-size 1.7em
    .login
        width 100%
        top 300px
        text-align center
        position absolute
        .social 
            list-style none
            padding-bottom 110px
            
            .btn
                text-align left
                span
                    top .2em
                    position: relative
                    font-size 1.8em
                    margin-right .3em
                    padding-right .3em
                    border-right 2px rgba(0, 0, 0, 0.3) solid
                .facebook
                    background #3B5998
                    margin-bottom .4em
                .twitter
                    background #5EA9DD
                a
                    padding .3em .5em
                    border-radius .4em
                    text-decoration none
                    color #fefefe
                    max-width 16em
                    height 3em
                    line-height 3em
                    display block
                    margin 0 auto
        .basic
            li
                display inline-block
                width 48%
                &:first-child
                    border-right rgba(0, 0, 0, .4) 2px solid 
                a
                    display block
                    padding 1em 0
                    text-decoration underline
                    color gris_oscuro
                    transition .4s color
                    &:hover
                        color rojo
                
    .create-account
        display none
        padding-top 7em
        legend
            padding-bottom .5em
            font-size 1.4em
            margin 0 auto
            text-align center
        .input
            margin 0 auto
            margin-bottom .5em
            padding 0
            position relative
            width 90%    
            span
                color gris_claro
                left .4em
                position: absolute            
                top 25%
    aside
        padding-top 5em
        .cover-hit
            display block
            overflow hidden
            max-height 400px
            img
                margin-bottom -50px
                width 100%
        .copy
            text-align center
            .author
                color gris_oscuro
            .title
                color gris_claro
        .slug
            color gris_claro
            width 90%
            margin 0 auto
            padding-top 1em
            padding-bottom 1.5em 
            border-top 2px rgba(gris_claro, 0.7) solid
            text-align center
            font-size 1.1em
    footer
        color #fefefe
        padding .6em
        background gris_oscuro
        text-align left
        span
            text-align right
            display inline-block
            width 48%
            a
                text-decoration underline
                color #fefefe
                &:last-child
                    margin-left .5em
        
        .icon-sfotipy
            text-align left
            top .15em
            font-size 1.2em
            position: relative



@media screen and (min-width:480px)
    
    .cover-hit
        img
            margin-bottom 0
            margin-top -50px
    .song
        &:nth-child(even)
            margin-right 1em
    .image
        img
            width 100%
            height auto
    .playing
        &.medium
            width auto

@media screen and (min-width:1000px)
    body
        background gris_mas_claro
    .button-menu
        display none
    .playing
        padding-top 1.3em
        text-align center
        &.large
            margin 0 auto
            width 62.5em
            overflow hidden
    .menu
        display block
        background gris_mas_claro
        overflow hidden
        border-top 1px solid gris_claro
        .item
            float left
            list-style none
            a
                color gris_oscuro
                cursor pointer
                display block
                padding 1em
                text-transform uppercase
                border-top 5px solid transparent
                transition .3s border-top
                &:hover
                    border-top 5px solid gris_claro
    .music
        width 32.5em
        float left


    .header
        height auto
        border none
        .title
            display none
    .logo
        display block
    .playlist
        display inline-block
        
    .home
        .logo
            img
                top 1em
                left 15%
                position: absolute
            figcaption
                font-size 3em
                width 50%
                margin 0 auto
                margin-top 10vh
        
        .login
            .social
                padding-bottom 1em
            .basic
                li
                    width auto
                    a 
                        display inline-block
                        text-shadow 2px 2px .9em #000
                        color rojo
                    &:first-child
                        border none
                        position: absolute
                        top -275px
                        right 15%
                    &:last-child:before
                        content "or"
                        margin-right .4em
                        color #fefefe
        
        .create-account
            padding-top 2em
            width 50%
            margin 0 auto
        aside
            width 70%
            margin 0 auto
            div
                overflow hidden
                margin-bottom 2em
                &:nth-child(even)
                    overflow hidden
                    .cover-hit
                        float right
                    .copy
                        right 0
                        left 15%
                        float left
                .cover-hit
                    float left
                    height 300px
                    width 300px
                    border-radius 50%
                    img 
                        height 100%
                        width 100%
                        margin 0
                .copy
                    float right
                    width 40%
                    position: relative
                    top 80px
                    right 15%
                    float right
                    display inline-block
                    .author
                        font-size 1.5em
                    .title
                        margin 0 auto
                        width 80%
    
